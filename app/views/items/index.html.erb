<% provide(:title, "Items") %>

<h1>Listing items from business <%= current_business.name%></h1>

<table class="item-list">
  <tr>
    <th>Item name</th>
    <th>Price</th>
    <th><%= link_to 'Add', new_item_path%>
    <!--<th><button name="add">Add</button></th>-->
  </tr>

  <% @items.each do |item| %>
    <tr>
      <td><%= item.name %></td>
      <td><%= item.price %></td>
      <td>
        <%= link_to 'Edit', edit_item_path(item)%> ||
        <%= link_to 'Delete', item_path(item),
              method: :delete,
              data: { confirm: 'Are you sure?' } %>
        <!--<button name="edit">Edit</button>-->
        <!--<button name="delete">Delete</button>-->
      </td>
    </tr>
  <% end %>
</table>
