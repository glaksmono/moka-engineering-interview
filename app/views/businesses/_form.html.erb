<%= form_for @business, html: { class: 'form-horizontal' } do |f| %>

  <% if @business.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@business.errors.count, "invalid value") %>.</h2>

    <ul>
      <% @business.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

<%= f.hidden_field :user_id %>

<div class="form-body">
  <div class="row">
    <div class="form-group">
      <%= f.label :name, class: "col-sm-1" %>
      <div class="col-sm-6">
        <%= f.text_field :name, class: 'form-control', placeholder: 'Enter Business Name' %>
      </div>
    </div>
  </div>

  <div class="form-body">
    <div class="row">
    <div class="form-group">
      <%= f.label :address, class: "col-sm-1" %>
      <div class="col-sm-6">
        <%= f.text_area :address, class: 'form-control', placeholder: 'Enter Business Address' %>
      </div>
    </div>
  </div>

   <div class="form-body">
  <div class="row">
    <div class="form-group">
      <%= f.label :city, class: "col-sm-1" %>
      <div class="col-sm-6">
        <%= f.text_field :city, class: 'form-control', placeholder: 'Enter Business City' %>
      </div>
    </div>
  </div>


 <div class="row">
      <div class="form-group form-action">
        <div class="col-sm-2">
          <%= f.submit 'Save My Business', class: 'btn btn-primary' %>
        </div>
        
      </div>      
    </div>
  </div>

<% end %>
  