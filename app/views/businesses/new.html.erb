<div class="col-md-4">
  <%= form_for(@business) do |f| %>
    <div class="field_with_errors form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="field_with_errors form-group">
      <%= f.label :address %>
      <%= f.text_field :address, class: "form-control" %>
    </div>
    <div class="field_with_errors form-group">
      <%= f.label :city %>
      <%= f.text_field :city, class: "form-control" %>
    </div>
    <%= f.submit %>
  <% end %>
</div>
